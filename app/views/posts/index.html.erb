<h2>My Posts</h2>

<div class="newPost"><%= link_to '新規投稿', new_post_path %></div>

<ul>
<% @posts.each do |post| %>
<li><div class="listItem">
    <div class="title"><%= link_to post.title, post_path(post) %></div>
    <div class="body"><%= simple_format(post.body) %></div>
    <div class="itemfooter">
        <%= link_to '[編集]', edit_post_path(post) %>
        <%= link_to '[削除]', post_path(post), method: "DELETE", data: { confirm: '削除してよろしいですか？'} %>
    </div>
    </div>
</li>
<% end %>
</ul>