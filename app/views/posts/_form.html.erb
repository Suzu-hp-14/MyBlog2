<%= form_for @post do |f| %>
<h3>タイトル</h3>
<p><%= f.text_field :title %></p>
<% if @post.errors.messages[:title].any? %>
<div class="error"><%= @post.errors.messages[:title][0] %></div>
<% end %>
<h3>本文</h3>
<p><%= f.text_area :body %></p>
<% if @post.errors.messages[:body].any? %>
<div class="error"><%= @post.errors.messages[:body][0] %></div>
<% end %>
<p><%= f.submit %></p>
<% end %>
